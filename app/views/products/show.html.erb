<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>

    <div class="row">
      <h2>Submit a Review</h2>

      <%= form_for [@product, @review] do |f| %>
        <p>
          Description : <%= f.text_field :description %><br />
          Rating : <%= f.select :rating, [1, 2, 3, 4, 5]%><br />
          <%= f.submit %>
        </p>
      <% end %>

    </div>

    <% end %>

    <div class="row">
      <dl class="dl-horizontal">

        <% @product.reviews.reverse_each do |review| %>

          <% @reviewer = User.find(review.user_id) %>

          <dt>User</dt>
            <dd><%= @reviewer.first_name %></dd>
            <dt>Description</dt>
            <dd><%= review.description %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %>/5 </dd><br/>

            <% if current_user == review.user %>

              <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>

            <% end %>

          <% end %>

      </dl>
    </div>

  </article>

</section>
